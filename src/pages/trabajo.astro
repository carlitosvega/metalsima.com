---
import { getCollection } from "astro:content";
import ContactCTA from "../components/ContactCTA.astro";
import Grid from "../components/Grid.astro";
import Hero from "../components/Hero.astro";
import PortfolioPreview from "../components/PortfolioPreview.astro";
import BaseLayout from "../layouts/BaseLayout.astro";

const projects = (await getCollection("trabajos")).sort(
 (a, b) => b.data.publishDate.valueOf() - a.data.publishDate.valueOf(),
);
---

<BaseLayout
 title="Trabajos | MetalSima"
 description="Conozca los proyectos más recientes de MetalSima"
>
 <div class="stack gap-20">
  <main class="wrapper stack gap-8">
   <Hero
    title="Mis Trabajos"
    tagline="Trabajos más recientes a continuación para tener una idea de mi experiencia pasada."
    align="start"
   />
   <Grid variant="offset">
    {
     projects.map((project) => (
      <li>
       <PortfolioPreview project={project} />
      </li>
     ))
    }
   </Grid>
  </main>
  <ContactCTA />
 </div>
</BaseLayout>
